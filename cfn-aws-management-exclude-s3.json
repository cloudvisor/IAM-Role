{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Integration IAM Role for Cloudvisor",
  "Metadata": {
    "AWS::CloudFormation::Interface": {
      "ParameterGroups": [
        {
          "Label": {"default": "Cloudvior Customer Configuration"},
          "Parameters": ["ClientUUIDToken", "ClientBillingBucket"]
        }
      ],
      "ParameterLabels": {
        "ClientUUIDToken": {"default": "Cloudvisor Customer ID"},
        "ClientBillingBucket": {"default": "Customer Billing Bucket Name"}
      }
    }
  },
  "Parameters": {
    "ClientUUIDToken": {
      "Description": "[DO NOT MODIFY] The customer ID provided by Cloudvisor to indentify you as a client",
      "Type": "String"
    },
    "ClientBillingBucket": {
      "Description": "Your Billing S3 Bucket Name",
      "Type": "String"
    }
  },
  "Resources": {
    "CloudvisorIamRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [ {
            "Action": "sts:AssumeRole",
            "Effect": "Allow",
            "Condition": {
              "StringEquals": {
                "sts:ExternalId": { "Ref": "ClientUUIDToken" }
              }
            },
            "Principal": {
              "AWS": [
                "arn:aws:iam::672188301118:root"
              ]
            }
          } ]
        },
        "Policies": [ {
          "PolicyName": "Cloudvisor-Policy",
          "PolicyDocument": {
            "Statement": [
              {
                "Sid": "CloudvisorReadonlyBillingBucketAccess",
                "Effect": "Allow",
                "Action": [
                  "s3:List*",
                  "s3:Get*"
                ],
                "Resource": [
                  { "Fn::Join": [ "", [ "arn:aws:s3:::", { "Ref": "ClientBillingBucket" }, "/*" ] ] }
                ]
              },
              {
                "Sid": "CloudvisorEC2Access",
                "Effect": "Allow",
                "Action": [
                  "ec2:Describe*",
                  "ec2:List*",
                  "ec2:CreateReservedInstancesListing",
                  "ec2:CreateTags",
                  "ec2:DeleteTags",
                  "ec2:PurchaseReservedInstancesOffering",
                  "ec2:MonitorInstances",
                  "ec2:UnmonitorInstances",
                  "ec2:PurchaseHostReservation",
                  "ec2:ModifyInstanceCreditSpecification",
                  "ec2:GetReservedInstancesExchangeQuote",
                  "ec2:AcceptReservedInstancesExchangeQuote",
                  "ec2:CancelReservedInstancesListing",
                  "ec2:PurchaseScheduledInstances",
                  "ec2:ModifyReservedInstances",
                  "ec2:ReleaseAddress",
                  "ec2:DeleteVolume",
                  "ec2:DeleteSnapshot",
                  "tag:GetResources",
                  "tag:GetTagKeys",
                  "tag:GetTagValues",
                  "autoscaling:Describe*",
                  "autoscaling:CreateOrUpdateTags",
                  "autoscaling:DeleteTags",
                  "autoscaling:DisableMetricsCollection",
                  "autoscaling:EnableMetricsCollection",
                  "elasticloadbalancing:Describe*",
                  "elasticloadbalancing:RemoveTags",
                  "elasticloadbalancing:DeleteLoadBalancer",
                  "elasticloadbalancing:AddTags"
                ],
                "Resource": [
                  "*"
                ]
              },
              {
                "Sid": "CloudvisorReadonlyGeneralAccess",
                "Effect": "Allow",
                "Action": [
                  "organizations:DescribeAccount",
                  "cloudwatch:List*",
                  "cloudwatch:Describe*",
                  "cloudwatch:GetMetricStatistics"
                ],
                "Resource": [
                  "*"
                ]
              },
              {
                "Sid": "CloudvisorRDSAccess",
                "Effect": "Allow",
                "Action": [
                  "rds:Describe*",
                  "rds:List*",
                  "rds:ListTagsForResource",
                  "rds:PurchaseReservedDBInstancesOffering",
                  "rds:AddTagsToResource",
                  "rds:RemoveTagsFromResource",
                  "rds:DeleteDBClusterSnapshot",
                  "rds:DeleteDBSnapshot",
                  "elasticache:Describe*",
                  "elasticache:List*",
                  "elasticache:AddTagsToResource",
                  "elasticache:RemoveTagsFromResource",
                  "elasticache:PurchaseReservedCacheNodesOffering",
                  "redshift:Describe*",
                  "redshift:CreateTags",
                  "redshift:DeleteTags",
                  "redshift:PurchaseReservedNodeOffering",
                  "redshift:DeleteClusterSnapshot",
                  "es:List*",
                  "es:Describe*",
                  "es:GetCompatibleElasticsearchVersions",
                  "es:AddTags",
                  "es:RemoveTags",
                  "es:PurchaseReservedElasticsearchInstance"
                ],
                "Resource": [
                  "*"
                ]
              }
            ]
          }
        }]
      }
    }
  },
  "Outputs": {
    "CloudvisorRoleArn": {
      "Description": "The ARN of the role created for Cloudvisor integration",
      "Value": { "Fn::GetAtt": ["CloudvisorIamRole", "Arn"] }
    }
  }
}
